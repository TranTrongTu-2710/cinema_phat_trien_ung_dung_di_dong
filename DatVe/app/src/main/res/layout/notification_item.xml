<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Biểu tượng thông báo -->
    <ImageView
        android:id="@+id/iv_notification_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_notifications"
        app:tint="?attr/colorPrimary" />

    <!-- Nội dung thông báo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt vé thành công!"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_notification_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Bạn đã đặt thành công 2 vé phim Lật Mặt 7."
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_notification_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2 giờ trước"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Chấm báo chưa đọc -->
    <ImageView
        android:id="@+id/iv_unread_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_unread_indicator"
        android:visibility="visible" />

</LinearLayout>
