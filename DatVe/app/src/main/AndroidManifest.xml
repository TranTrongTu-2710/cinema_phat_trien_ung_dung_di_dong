<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Bỏ xmlns:app không cần thiết -->

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DatVe"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!--
            === SỬA LỖI TẠI ĐÂY (1) ===
            Áp dụng theme NoActionBar cho MainActivity
        -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DatVe.NoActionBar"
            android:usesCleartextTraffic="true"
            tools:targetApi="31">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="vnpay-return"
                    android:scheme="datveapp" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.datve.LoginActivity" />
        <activity android:name="com.example.datve.RegisterActivity" />

        <!--
            === SỬA LỖI TẠI ĐÂY (2) ===
            Áp dụng theme NoActionBar cho các Activity có Toolbar khác
        -->
        <activity
            android:name="com.example.datve.seat.SeatSelectionActivity"
            android:theme="@style/Theme.DatVe.NoActionBar" />
        <activity
            android:name="com.example.datve.food.FoodSelectionActivity"
            android:theme="@style/Theme.DatVe.NoActionBar" />
        <activity
            android:name="com.example.datve.showtime.SelectShowtimeActivity"
            android:theme="@style/Theme.DatVe.NoActionBar" />
        <activity
            android:name="com.example.datve.user.ChangePasswordActivity"
            android:theme="@style/Theme.DatVe.NoActionBar" />

        <!-- Khai báo cho VNPayPaymentActivity đã đúng -->
        <activity
            android:name="com.example.datve.payment.VNPayPaymentActivity"
            android:exported="false"
            android:theme="@style/Theme.DatVe.NoActionBar" />
    </application>

</manifest>
